// Roman Number to Integer
// Solution

#include <bits/stdc++.h>
using namespace std;


// } Driver Code Ends
//User function template for C++

class Solution {
  public:
    int romanToDecimal(string &str) {
        // code here
        map<char, int>values={{'I',1}, {'V', 5},{'X', 10},{'L', 50},{'C', 100},{'D', 500},{'M', 1000}};
        int ans=0;
        for(int i=0;i<str.length();i++){
            if(values[str[i]]>= values[str[i+1]]){
                ans=ans+values[str[i]];
            }
            else{
                ans=ans-values[str[i]];
            }
        }
        return ans;
    }
};

//{ Driver Code Starts.

int main() {
    int t;
    cin >> t;
    while (t--) {
        string s;
        cin >> s;
        Solution ob;
        cout << ob.romanToDecimal(s) << endl;
    }
}
